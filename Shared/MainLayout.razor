@inherits LayoutComponentBase

<style> 
@@font-face {
   font-family: Vegan;
   src: url('../otherfonts/VeganStylePersonalUse-5Y58.ttf') format("truetype");
}

sandwichTitle {
   font-family: Vegan;
   font-size: 30px;
}
</style>

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<PageTitle>Navigation</PageTitle>

   <MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <sandwichTitle>
            <p>
                S a n d w i c h &nbsp &nbsp K i n g
            </p>
        </sandwichTitle>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MyNavMenu />
    </MudDrawer>

    <MudMainContent>
        <div class="top-row px-4 auth">
            <LoginDisplay />
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
